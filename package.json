{
    "name": "hello-kubernetes",
    "version": "1.0.0",
    "description": "",
    "private": true,
    "config":{
        "port": 8080,
        "ab_times": 1000,
        "image": "pyshif/hello-kubernetes",
        "container": "hello-kubernetes",
        "deployment": "hello-deployment",
        "service": "hello-service",
        "pod": "hello-pod",
        "scale_max": "10",
        "scale_min": "2",
        "export": "./temp"
    },
    "scripts": {
        "//": "üåü Node.js Server Operation (PM2)",
        "start": "pm2 start ecosystem.config.js",
        "server": "pm2 start ecosystem.config.js --env production",
        "stop": "pm2 delete web-auth-server",
        "log": "pm2 log --out --lines 150 web-auth-server",
        "test": "jest --detectOpenHandles --forceExit --runInBand --coverage",
        "//": "ü¶Ñ Press Testing (Apache HTTP server benchmarking tool)",
        "health": "curl http://localhost:$npm_package_config_port",
        "press": "ab -n $npm_package_config_ab_times 127.0.0.1:$npm_package_config_port/health", 
        "press:long": "ab -n $npm_package_config_ab_times 127.0.0.1:$npm_package_config_port/long", 
        "//": "üê≥ Docker Operation",
        "docker:login": "docker login",
        "docker:prune": "docker system prune",
        "image:pull": "docker pull $npm_package_config_image",
        "image:push": "docker push $npm_package_config_image",
        "image:build": "docker build . -t $npm_package_config_image",
        "image:get": "docker images",
        "image:clear": "docker rmi $npm_package_config_image",
        "container:start": "docker run -p 8080:8080 --name $npm_package_config_container -d $npm_package_config_image",
        "container:get": "docker ps",
        "container:stop": "docker stop $npm_package_config_container",
        "//": "üßê Kubernetes Cluster Operation (Minikube)",
        "cluster:start": "minikube start",
        "cluster:stop": "minikube stop",
        "cluster:delete": "minikube delete",
        "cluster:dashboard": "minikube dashboard",
        "cluster:tunnel": "minikube tunnel",
        "all:get": "kubectl get all",
        "ip:get": "kubectl get svc",
        "event:get": "kubectl get events",
        "config:get": "kubectl config view",
        "//": "üòé Kubernetes Addons (Minikube)",
        "addons:list": "minikube addons list",
        "addons:get": "kubectl get pod,svc -n kube-system",
        "addons:enable:metrics-server": "minikube addons enable metrics-server",
        "addons:disable:metrics-server": "minikube addons disable metrics-server",
        "//": "üîª Kubernetes Deployment (Minikube)",
        "deployment:apply": "kubectl apply -f ./config/deployment.yaml",
        "deployment:delete": "kubectl delete deployment $npm_package_config_deployment",
        "deployment:get": "kubectl get deployments",
        "deployment:describe": "kubectl describe deployments",
        "deployment:expose": "kubectl expose deployment $npm_package_config_deployment --type=LoadBalancer --port=$npm_package_config_port",
        "deployment:unexpose": "kubectl delete service $npm_package_config_deployment",
        "deployment:scale-up": "kubectl scale deployments/$npm_package_config_deployment --replicas=$npm_package_config_scale_max",
        "deployment:scale-down": "kubectl scale deployments/$npm_package_config_deployment --replicas=$npm_package_config_scale_min",
        "deployment:export": "kubectl get deployments/$npm_package_config_deployment -o yaml > $npm_package_config_export/deployment-$npm_package_config_deployment.yaml",
        "//": "üê∂ Kubernetes Horizontal Pods AutoScaler",
        "hpa:get": "kubectl get hpa",
        "hpa:watch": "kubectl get hpa $npm_package_config_deployment --watch",
        "hpa:create": "kubectl autoscale deployment $npm_package_config_deployment --cpu-percent=5 --min=$npm_package_config_scale_min --max=$npm_package_config_scale_max",
        "hpa:apply": "kubectl apply -f ./config/hpa.yaml",
        "hpa:delete": "kubectl delete hpa/$npm_package_config_deployment",
        "hpa:export": "kubectl get hpa $npm_package_config_deployment -o yaml > $npm_package_config_export/hpa-$npm_package_config_deployment.yaml",
        "top:nodes": "kubectl top nodes",
        "top:pods": "kubectl top pods",
        "//": "üî∑ Kubernetes Service (Minikube)",
        "service:apply": "kubectl apply -f ./config/service.yaml",
        "service:expose": "minikube service $npm_package_config_service --url",
        "service:delete": "kubectl delete service $npm_package_config_service",
        "service:get": "kubectl get services",
        "service:describe": "kubectl describe services/$npm_package_config_deployment",
        "service:export": "kubectl get services/$npm_package_config_deployment -o yaml > $npm_package_config_export/service-$npm_package_config_service.yaml",
        "//": "üåßÔ∏è Kubernetes Pod (Minikube)",
        "pod:get": "kubectl get pods"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "debug": "^4.3.3",
        "dotenv": "^14.2.0",
        "express": "^4.17.2",
        "express-session": "^1.17.2",
        "express-validator": "^6.14.0",
        "http-errors": "^2.0.0",
        "js-base64": "^3.7.2",
        "jsonwebtoken": "^8.5.1",
        "morgan": "^1.10.0",
        "prettier": "^2.5.1",
        "pug": "^3.0.2",
        "session-file-store": "^1.5.0",
        "validator": "^13.7.0"
    },
    "devDependencies": {
        "axios": "^1.2.0",
        "form-data": "^4.0.0"
    }
}
